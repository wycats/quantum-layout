{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "https://cdn.skypack.dev/localforage@1.9.0": ["types/localforage"],
      "https://cdn.skypack.dev/@forlagshuset/simple-fs@0.4.1": [
        "types/simple-fs"
      ]
    },
    "rootDirs": [],
    "typeRoots": [],
    "types": [],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "bootstrap-src/**/*.ts",
    "types/**/*.d.ts",
    "scripts/*.mjs"
  ]
}
