{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "linthtml.packageManager": "pnpm",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "json.schemas": [
    {
      "fileMatch": [".swcrc"],
      "url": "https://json.schemastore.org/swcrc"
    }
  ]
}
